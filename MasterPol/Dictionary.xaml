<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Определение шрифта -->
    <FontFamily x:Key="PrimaryFont">Segoe UI</FontFamily>

    <!-- Определение цветов -->
    <Color x:Key="MainBackground">#FFFFFF</Color>
    <Color x:Key="AdditionalBackground">#F4E8D3</Color>
    <Color x:Key="AccentColor">#67BA80</Color>

    <!-- Стиль для фонов -->
    <SolidColorBrush x:Key="MainBackgroundBrush" Color="{StaticResource MainBackground}" />
    <SolidColorBrush x:Key="AdditionalBackgroundBrush" Color="{StaticResource AdditionalBackground}" />
    <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}" />

    <!-- Стиль для кнопок -->
    <Style x:Key="AccentButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentColorBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Width" Value="250" />
        <Setter Property="Margin" Value="0,0,0,20" />
    </Style>
</ResourceDictionary>
