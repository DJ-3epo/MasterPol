<Page x:Class="MasterPol.Pages.MaterialCalculationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Расчет необходимого материала">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Выберите тип продукции:" Margin="10"/>
            <ComboBox x:Name="ProductTypeComboBox" Width="200" Margin="10" SelectionChanged="ProductTypeComboBox_SelectionChanged"/>

            <TextBlock Text="Выберите тип материала:" Margin="10"/>
            <ComboBox x:Name="MaterialTypeComboBox" Width="200" Margin="10" SelectionChanged="MaterialTypeComboBox_SelectionChanged"/>

            <TextBlock Text="Введите количество продукции:" Margin="10"/>
            <TextBox x:Name="ProductCountTextBox" Width="200" Margin="10"/>

            <TextBlock Text="Введите параметры продукции (два числа):" Margin="10"/>
            <TextBox x:Name="Param1TextBox" Width="200" Margin="10"/>
            <TextBox x:Name="Param2TextBox" Width="200" Margin="10"/>

            <Button Content="Рассчитать" Click="CalculateButton_Click" Width="200" Margin="10"/>

            <TextBlock x:Name="ResultTextBlock" Margin="10" FontSize="16"/>
        </StackPanel>
    </Grid>
</Page>
